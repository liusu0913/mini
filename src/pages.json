{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^r-(.*)": "@/components/$1/index.vue",
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/my/index",
			"style": {
				"navigationBarTitleText": "个人中心"
			}
		}
	],
	"subPackages": [{
		"root": "pages/edit",
		"pages": [{
			"path": "index",
			"style": {
				"navigationBarTitleText": "个人编辑"
			}
		}]
	},{
		"root": "pages/user",
		"pages": [{
			"path": "list",
			"style": {
				"navigationBarTitleText": "用户列表"
			}
		},
		{
			"path": "info",
			"style": {
				"navigationBarTitleText": "用户详情"
			}
		}]
	}, {
		"root": "pages/moreSend",
		"pages": [
			{
			"path": "index",
			"style": {
				"navigationBarTitleText": "群发助手"
			}
		}]
	},{
		"root": "pages/fodder",
		"pages": [
			{
				"path": "index",
				"style": {
					"navigationBarTitleText": "素材页面"
				}
			}
		]
	},{
		"root": "pages/winCustomer",
		"pages": [
			{
				"path": "index",
				"style": {
					"navigationBarTitleText": "获客活动"
				}
			}
		]
	}, {
		"root": "pages/active",
		"pages": [
			{
				"path": "index",
				"style": {
					"navigationBarTitleText": "活动详情页面"
				}
			}
		]
	}],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "医药线小程序",
		"navigationBarBackgroundColor": "#54bf8b",
		"backgroundColor": "#54bf8b"
	},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#007AFF",
		"borderStyle": "black",
		"backgroundColor": "#F8F8F8",
		"list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/icons/component.png",
				"selectedIconPath": "static/icons/componentHL.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/my/index",
				"iconPath": "static/icons/template.png",
				"selectedIconPath": "static/icons/templateHL.png",
				"text": "我的"
			}
		]
	}
}